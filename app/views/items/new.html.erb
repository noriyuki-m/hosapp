<div class="form-wrapper-title">
   <h1>　情報を入力して下さい</h1>
</div>
<div class="form-wrapper">
    <%# <h1>　情報を入力して下さい</h1> %>
      <div class="info-form">

        <div class="formpage-title">
        <p class="form11">病院名：</p>
        <p class="form21">診察時間の変更：</p>
        <p class="form31">説明：</p>
        <p class="form41">病院のリンク：</p>
        <p class="form51">画像：</p>
        </div>


        <%= form_for @item, method: :post do |f| %>
        
          <p><%= f.text_field :name, class:"form1" %></p>
          <p><%= f.text_field :hostime, class:"form2" %></p>
          <p><%= f.text_field :description, class:"form3" %></p>
          <p><%= f.text_field :hoslink, class:"form4" %></p>
          <p><%= f.file_field :image %></p>

          <%= f.hidden_field :showlist1, value:"診療時間変更：" %>
          <%= f.hidden_field :showlistmiddle, value:"病院の取る対策：" %>
          <%= f.hidden_field :showlistbottom, value:"病院対策ページlink：" %>

          <input type="submit" value="投稿する">
        <% end %>
      </div>
</div>





<% else %>
<%= link_to "ログイン", new_user_session_path, class: 'post' %>
<%= link_to "新規登録", new_user_registration_path, class: 'post' %>
<% end %>
